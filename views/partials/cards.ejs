<div class="scroll-wrapper">
    <% for( let i = 0; i < 4; i++ ) { %>
    <div class="card justify-content-between bg-dark text-white <% if (i !== 0) { %>ml-5<% } %> my-2 border-0 rounded-0 <%= route %>"
        style="width:45vh">
        <div class="card-body <% if(route === 'events') { %>m-4<% } %>">
            <% if(route !== 'events') { %>
            <h1 class="card-title"><%= date %></h1>
            <p class="card-text">Lorem ipsum dolor</p>
            <% } else { %>
            <% for(let i = 0; i < 4; i++) { %>
            <div class="mb-4">
                <h4 class="card-title mb-0"><%= date %></h4>
                <caption class="card-title">Blah Blah event</caption>
            </div>
            <% } %>
            <% } %>
        </div>
        <a href="/events/<%= item %>" class="text-white">
            <div class="card-footer">
                <h1 class="mb-0"><%= item %></h1>
                <% if(route === 'events') { %>
                <h2>Club</h2>
                <% } %>
            </div>
        </a>
    </div>
    <% if(route !== 'events') { %>
    <div class="card bg-transparent text-white mr-5 my-2 border-0 rounded-0" style="width: 0">
        <div class="card-body pl-5 d-none">
            <h1 class="card-title text-gold-tips">Event Name</h1>
            <p class="card-text">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Voluptate perferendis
                voluptatum quam sunt dolore eligendi.</p>
            <a href="" class="btn btn-outline-gold-tips">REGISTER</a>
        </div>
    </div>
    <% } %>
    <% } %>
</div>